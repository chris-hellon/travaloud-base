@page "/login-with-recovery-code"
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<section id="twoFactorLogin" class="bg-light">
    <div class="container-fluid">
        <div class="container pt-8 pb-8">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-6" data-mdb-toggle="animation" data-mdb-animation-start="onLoad" data-mdb-animation-on-scroll="once" data-mdb-animation="fade-in" data-mdb-animation-delay="1200" data-mdb-animation-duration="900">
                    <h1 class="display-3 mb-4">SIGN IN</h1>
                    <p>
                        You have requested to log in with a recovery code.
                    </p>
                    <p class="mb-0">
                        This login will not be remembered until you provide
                        an authenticator app code at log in or disable 2FA and log in again.
                    </p>
                    <div class="card mt-5">
                        <div class="card-body p-5">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="travaloud-validation"></div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <!-- Name input -->
                                        <div class="form-outline mb-4 mt-4">
                                            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                                            <label asp-for="Input.RecoveryCode" class="form-label"></label>
                                        </div>
                                        <span asp-validation-for="Input.RecoveryCode" class="travaloud-validation"></span>
                                    </div>
                                </div>
                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary d-block w-100">Sign In</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>