@page "/login-with-2fa/{returnUrl?}"
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<section id="twoFactorLogin" class="bg-light">
    <div class="container-fluid">
        <div class="container pt-8 pb-8">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-6" data-mdb-toggle="animation" data-mdb-animation-start="onLoad" data-mdb-animation-on-scroll="once" data-mdb-animation="fade-in" data-mdb-animation-delay="1200" data-mdb-animation-duration="900">
                    <h1 class="display-3 mb-4">SIGN IN</h1>
                    <p>Your login is protected with an authenticator app.</p>
                    <p class="mb-0">Enter your authenticator code below.</p>
                    <div class="card mt-5">
                        <div class="card-body p-5">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="travaloud-validation"></div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <!-- Name input -->
                                        <div class="form-outline mb-4 mt-4">
                                            <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                                            <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                                        </div>
                                        <span asp-validation-for="Input.TwoFactorCode" class="travaloud-validation"></span>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="Input.ReturnUrl"/>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary d-block w-100">Sign In</button>
                            </form>

                            <p class="small mt-4 text-start text-muted">
                                Don't have access to your authenticator device? <br />You can
                                <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode">log in with a recovery code</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>