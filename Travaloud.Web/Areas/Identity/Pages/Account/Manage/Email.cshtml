@page "/my-account/email"
@model EmailModel
@{
    ViewData["Title"] = "Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container pt-8 pb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8 has-parallax-scroll">

            <form id="email-form" method="post">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input asp-for="Email" class="form-control" disabled />
                            <label asp-for="Email" class="form-label"></label>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-outline mb-4">
                            <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                            <label asp-for="Input.NewEmail" class="form-label"></label>
                        </div>
                        <span asp-validation-for="Input.NewEmail" class="travaloud-validation"></span>
                    </div>
                </div>

                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-lg btn-primary">Change email</button>
            </form>
        </div>
    </div>
</div>
