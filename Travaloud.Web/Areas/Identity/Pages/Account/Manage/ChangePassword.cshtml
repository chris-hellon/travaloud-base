@page "/my-account/password"
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container pt-8 pb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8 has-parallax-scroll">
            <form method="post">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-outline mb-4">
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.OldPassword" class="form-label"></label>
                        </div>
                        <span asp-validation-for="Input.OldPassword" class="travaloud-validation"></span>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-outline mb-4">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="email" aria-required="true" />
                            <label asp-for="Input.NewPassword" class="form-label"></label>
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="travaloud-validation"></span>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-outline mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="email" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="travaloud-validation"></span>
                    </div>
                </div>

                <button id="change-email-button" type="submit" class="btn btn-lg btn-primary">Update password</button>
            </form>
        </div>
    </div>
</div>

